<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_teal"
    tools:context="com.tekinarslan.material.sample.LoginActivity">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:hint="@string/user" />

    <!--<Button
        android:id="@+id/btn_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/login" />-->
		<!--使用第三方的Button，使得UI更加美观-->
    <info.hoang8f.widget.FButton
        android:id="@+id/btn_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        fbutton:buttonColor="@color/fbutton_default_shadow_color"
        fbutton:cornerRadius="@dimen/fbutton_default_conner_radius"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="@dimen/fbutton_default_shadow_height"
        android:text="@string/login" />
</RelativeLayout>
